<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="ListItemLinearLayoutVertical" parent="ListItemLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="ListItemLinearLayoutHorizontal" parent="ListItemLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AnimalDetailLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AnimalDetailTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AnimalDetailAttributeNameTextView" parent="AnimalDetailTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimalDetailAttributeValueTextView" parent="AnimalDetailTextView">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
