<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_weight="1"
             tools:showIn="@layout/fragment_question">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_answered_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:text="Otazka byla zodpovezena spravne!"/>
        <ImageView
            android:id="@+id/question_answered_flag_imageview"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/flag_question"/>
    </LinearLayout>
    <Button
        android:id="@+id/question_answered_animal_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_answered_animal_detail_button_text"/>

    <Button
        android:id="@+id/question_answered_next_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_answered_next_question_button_text"/>
</LinearLayout>