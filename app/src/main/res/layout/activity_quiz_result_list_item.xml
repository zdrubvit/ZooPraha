<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/ListItemLinearLayoutHorizontal">

    <TextView
        android:id="@+id/activity_quiz_result_list_item_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="1"/>
    <TextView
        android:id="@+id/activity_quiz_result_list_item_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        tools:text="Username"/>
    <TextView
        android:id="@+id/activity_quiz_result_list_item_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        tools:text="88 / 100"/>

</LinearLayout>