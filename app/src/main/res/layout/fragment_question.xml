<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_question_text_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Question text"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fragment_question_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Answer no.1"/>
            <Button
                android:id="@+id/fragment_question_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Answer no.2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fragment_question_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Answer no.3"/>
            <Button
                android:id="@+id/fragment_question_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Answer no.4"/>
        </TableRow>
    </TableLayout>
</LinearLayout>